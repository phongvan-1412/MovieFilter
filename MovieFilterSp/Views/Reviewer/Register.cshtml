@model MovieFilterSp.Models.reviewer
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container col-md-4">
    <h1 class="mb-5">Register</h1>
    <form action="Register" method="post">
        <div class="form-group mb-3">
            <label class="form-label">User Name</label>
            <input name="rev_name" class="form-control" placeholder="User Name" required="" />
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Email</label>
            <input type="email" name="rev_email" class="form-control" placeholder="Email" required="" />
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Email</label>
            <input type="password" name="rev_password" class="form-control" placeholder="Password" required="" />
        </div>

        <div class="d-flex justify-content-between form-group mb-3">
            <input type="submit" value="Register" class="btn btn-primary" />
        </div>

    </form>
</div>