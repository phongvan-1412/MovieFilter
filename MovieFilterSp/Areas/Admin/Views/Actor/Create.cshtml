@model MovieFilterSp.Models.actor
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createActor">
    Create
</button>

<!-- Modal -->
<div class="modal fade" id="createActor" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content text-dark">
            <div class="modal-header">
                <h5 class="modal-title">Create Actor</h5>
            </div>
            <div class="modal-body">
                <form action="/Admin/Actor/Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input name="act_id" class="form-control" hidden />
                    <div class="form-group mb-3">
                        <label class="form-label">First Name</label>
                        <input name="act_fname" class="form-control" />
                        <span asp-validation-for="act_fname" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">Last Name</label>
                        <input name="act_lname" class="form-control" />
                        <span asp-validation-for="act_lname" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">Gender</label>
                        <select class="form-select" name="act_gender">
                            <option value="1">Female</option>
                            <option value="2">Male</option>
                        </select>
                        <span asp-validation-for="act_gender" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

