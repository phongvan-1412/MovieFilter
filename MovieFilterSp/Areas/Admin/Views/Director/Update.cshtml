@model MovieFilterSp.Models.director
@{
    var dirName = Model.dir_lname.Replace(" ", "") + Model.dir_id;
}
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#@dirName">
    Update
</button>

<!-- Modal -->
<div class="modal fade" id="@dirName" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content text-dark">
            <div class="modal-header">
                <h5 class="modal-title">Update Director</h5>
            </div>
            <div class="modal-body">
                <form action="/Admin/Director/Update" method="post">

                    <div class="form-group mb-3 text-dark">
                        <label class="form-label">First Name</label>
                        <input name="dir_id" value="@Model.dir_id" hidden />
                        <input name="dir_fname" value="@Model.dir_fname" class="form-control" />
                        <span asp-validation-for="dir_fname" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3 text-dark">
                        <label class="form-label">Last Name</label>
                        <input name="dir_lname" value="@Model.dir_lname" class="form-control" />
                        <span asp-validation-for="dir_lname" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between form-group">
                        <input type="submit" value="Update" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


