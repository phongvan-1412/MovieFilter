@{
    ViewData["Title"] = "List of Account";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@*Write Code*@
<div class="row mt-5">
    <div class="col-md-10 offset-1">
        <div class="row text-white mb-5">
            <form action="Read" method="get">
                <div class="d-flex mb-3">
                    <div class="me-3">
                        <input placeholder="Search..."
                               style="width: 300px; height: 35px; background: transparent; border: 1px solid white; border-radius: 10px; padding-left: 10px;"
                               name="searchString" />
                    </div>

                    <div class="d-flex flex-column align-items-center float-start">
                        <label class="fw-bold me-3" style="color: #0d6efd">Rated</label>
                        <input name="rated" type="checkbox" />
                    </div>
                </div>

                <div class="me-5">
                    <div class="d-flex me-3 mb-2">
                        <label class="fw-bold me-3" style="color: #0d6efd">Rating</label>
                        <select id="selRating" name="rating" placeholder="Select Rating" data-search="true" data-silent-initial-value-set="true" style="width: 100px">
                            <option>Select</option>
                            <option value="7">None Rating</option>
                            <option value="8">At least 3 stars</option>
                        </select>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary text-white me-3">Search</button>
            </form>
        </div>

        <table class="table text-white">
            <thead class="table-primary">
                <tr>
                    <th class="align-middle p-2">Index</th>
                    <th class="align-middle p-2">Name</th>
                    <th class="align-middle p-2">Email</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model as List<MovieFilterSp.Models.reviewer>)
                {
                    <tr>
                        <td class="align-middle p-2" style="margin-right: 1rem">
                            @{
                                var index = Model.IndexOf(item) + 1;
                            }@index
                        </td>
                        <td class="align-middle p-2">@item.rev_name</td>
                        <td class="align-middle p-2">@item.rev_email</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    VirtualSelect.init({
        ele: '#selRating',
        autoSelectFirstOption: false,
    });
</script>
